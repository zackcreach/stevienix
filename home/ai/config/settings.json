{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "additionalDirectories": ["creachignore/"],
    "allow": [
      "Bash(cd:*)",
      "Bash(cat:*)",
      "Bash(dig:*)",
      "Bash(find:*)",
      "Bash(gh api:*)",
      "Bash(gh pr view:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git status:*)",
      "Bash(git show:*)",
      "Bash(grep:*)",
      "Bash(iex:*)",
      "Bash(kill:*)",
      "Bash(lsof:*)",
      "Bash(mix test:*)",
      "Bash(mix compile:*)",
      "Bash(mix deps:*)",
      "Bash(mix format:*)",
      "Bash(mix lint:*)",
      "Bash(mix run:*)",
      "Bash(nix:*)",
      "Bash(ping:*)",
      "Bash(pkill:*)",
      "Bash(uv:*)",
      "Edit",
      "Read",
      "Search",
      "Web Search",
      "Write",
      "mcp__:*"
    ],
    "ask": ["Bash(git push:*)", "Bash(git commit:*)"],
    "defaultMode": "plan",
    "disableBypassPermissionsMode": "disable"
  },
  "statusLine": {
    "type": "command",
    "command": "/Users/zack/.config/claude/statusline-command.sh",
    "padding": 0
  },
  "hooks": {
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -f /Users/zack/.config/claude/sounds/waiting.mp3 ] && afplay /Users/zack/.config/claude/sounds/waiting.mp3 || true",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "[ -f /Users/zack/.config/claude/sounds/complete.mp3 ] && afplay /Users/zack/.config/claude/sounds/complete.mp3 || true",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
